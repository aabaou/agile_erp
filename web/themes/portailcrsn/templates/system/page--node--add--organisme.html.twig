{% extends "page.html.twig" %}
{% if page.navigation or page.navigation_collapsible %}
    {% block navbar %}
        {% set navbar_classes = [
        'navbar',
        theme.settings.navbar_inverse ? 'navbar-inverse' : 'navbar-default',
        theme.settings.navbar_position ? 'navbar-' ~ theme.settings.navbar_position|clean_class : container,
        ] %}
        <div id="menu-user-role">
            {{ page.menu_user_role }}
        </div>
        <header{{ navbar_attributes.addClass(navbar_classes) }} id="navbar" role="banner">
            <div class="navbar-header">
                {{ page.navigation }}
                {# .btn-navbar is used as the toggle for collapsed navbar content #}
                {% if page.navigation_collapsible %}
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">{{ 'Toggle navigation'|t }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                {% endif %}
            </div>

            {# Navigation (collapsible) #}

            {# Ajout du logo Stéphane #}
            <img class="img-responsive" src="/{{ directory }}/logo.svg"/>
            {# Fin ajout logo Stéphane #}

            {% if page.navigation_collapsible %}
                <div class="navbar-collapse collapse">
                    {{ page.navigation_collapsible }}
                </div>
            {% endif %}
        </header>
    {% endblock %}
{% endif %}


{% block content %}
    <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow=50"
             aria-valuemin="0" aria-valuemax="100" style="width:50%">
            50% {{ 'Réalisé'|trans }}
        </div>
    </div>
    <a id="main-content"></a>
    <div class="node-add-organisme">
        {{ page.content }}
    </div>
{% endblock %}

{% if page.footer %}
    {% block footer %}
        <footer class="footer {{ container }}" role="contentinfo">
            {#Ajout slider partenaires Stéphane#}
            <div id="partenaire-slider-center">
                <div class="partenaire-slider-footer">{{ page.footer.portailcrsn_views_block__partenaire_block_1 }}</div>
                <div class="partenaire-slider-footer">{{ page.footer.views_block__partenaire_block_2 }}</div>
                <div class="partenaire-slider-footer">{{ page.footer.views_block__partenaire_block_3 }}</div>
                <div class="partenaire-slider-footer">{{ page.footer.views_block__partenaire_block_4 }}</div>
            </div>

            {# Menu Mentions légales #}
            {{ page.footer.portailcrsn_footer }}

            {#Ajout copyright Stéphane#}
            <p class="text-center" id="copyright-numeric">
                © Numeric'Emploi Grand Est 2016
                <br>
                Numéric’Emploi Grand Est – Siège : Maison de l’entreprise - 27 avenue de l’Europe 67300 Schiltigheim
                <br>
                Association loi 1908 inscrite au tribunal d’instance de Schiltigheim – SIREN : 820 472 603
            </p>
            {#Ajout copyright Stéphane#}

        </footer>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
        <script type="application/javascript">
            $(document).ready(function () {
                $('#edit-group-caracteristique-entreprise').addClass('user-form-inactive');
                $('#edit-group-perimetre-adhesion').addClass('user-form-inactive');
                $('.progress-bar-success').attr('aria-valuenow', '50').css('width', '50%');
            });

            $('#edit-field-categorie-d-organisme').change(function () {
                if ($(this).val() == 56 || $(this).val() == "56") {
                    $('#edit-group-caracteristique-entreprise').removeClass('user-form-inactive');
                    $('#edit-group-caracteristique-entreprise').addClass('user-form-active');
                    $('#edit-group-perimetre-adhesion').removeClass('user-form-inactive');
                    $('#edit-group-perimetre-adhesion').addClass('user-form-active');
                }
                else if($(this).val() == 63 || $(this).val() == "63"){
                    $('#edit-group-perimetre-adhesion').removeClass('user-form-inactive');
                    $('#edit-group-perimetre-adhesion').addClass('user-form-active');
                    $('#edit-group-caracteristique-entreprise').removeClass('user-form-active');
                    $('#edit-group-caracteristique-entreprise').addClass('user-form-inactive');
                }
                else {
                    $('#edit-group-caracteristique-entreprise').removeClass('user-form-active');
                    $('#edit-group-caracteristique-entreprise').addClass('user-form-inactive');
                    $('#edit-group-perimetre-adhesion').removeClass('user-form-active');
                    $('#edit-group-perimetre-adhesion').addClass('user-form-inactive');
                }
            });
        </script>
    {% endblock %}
{% endif %}